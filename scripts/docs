#!/usr/bin/env bash

set -e

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(cd "$SCRIPT_DIR/.." && pwd)"

echo -e "${YELLOW}Generating solarized-luv documentation...${NC}"

cd "$ROOT_DIR"

# Create docs directory if it doesn't exist
mkdir -p docs

# Generate docs
nvim --headless -u NONE -l lua/solarized-luv/docs.lua

echo -e "${GREEN}âœ“ Documentation generated successfully!${NC}"
echo ""
echo "Generated files:"
ls -lh docs/*.md 2>/dev/null || echo "No files generated"
